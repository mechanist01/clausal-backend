run = "python app.py"
hidden = [".pythonlibs"]

[packager]
language = "python3"

[packager.features]
enabledForHosting = true
packageSearch = true
guessImports = true

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "python app.py"]
deploymentTarget = "cloudrun"

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[unitTest]
language = "python3"